

<div class="govuk-form-group @(IsErrored ? "govuk-form-group--error" : "")">
    <label class="govuk-label" for="@Key">@Label</label>
    @if(IsErrored)
    {
        <p class="govuk-error-message">
            @foreach(var error in err)
            {
                <span class="govuk-visually-hidden">Error:</span> @error <br />
            }
        </p>
        <InputText type="text" class="govuk-input govuk-input--error" id="@Key" name="@Key" @bind-Value="Data" />
    }
    else
    {
        <InputText type="text" class="govuk-input" id="@Key" name="@Key" @bind-Value="Data" />
    }
</div>